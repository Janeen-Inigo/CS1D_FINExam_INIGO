// Promt to Enter two words 
let word1 = prompt("Enter the first word (ex, RACECAR):");
let word2 = prompt("Enter the second word (ex, RECORDER):");

//Function to Reverse
function isPalindrome(str) {
    let reversed = str.split('').reverse().join('');
    console.log(`Original: ${str} | Reversed: ${reversed}`);
    return str === reversed;
}

//Show output
console.log(`Is "${word1}" a palindrome?`, isPalindrome(word1));
console.log(`Is "${word2}" a palindrome?`, isPalindrome(word2));